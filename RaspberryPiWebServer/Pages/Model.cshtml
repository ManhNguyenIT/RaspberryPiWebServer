@page
@using RaspberryPiWebServer.Models
@model RaspberryPiWebServer.Pages.ModelModel

@(Html.DevExtreme().DataGrid<Models.Model>()
    .ShowBorders(true)
    .DataSource(d => d.Mvc()
            .Controller("Model")
        .LoadAction("Get")
    @*     .UpdateAction("Put")*@
    @*.DeleteAction("Delete")*@
            .Key("Id"))
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowUpdating(true)
        .AllowAdding(true)
        .AllowDeleting(true)
        .Popup(p => p
            .Title($"{nameof(Models.Model)} Info")
            .ShowTitle(true)
            .Width(700)
            .Height(525)
        )
        .Form(f => f.Items(items => {
            items.AddSimpleFor(m => m.Name);
        }))
        )
    .Columns(columns => {
        columns.AddFor(m => m.Name);
    })
    .Paging(p => p.PageSize(10))
    .FilterRow(f => f.Visible(true))
    .HeaderFilter(f => f.Visible(true))
    .GroupPanel(p => p.Visible(true))
    .Grouping(g => g.AutoExpandAll(false))
    .RemoteOperations(true)
)