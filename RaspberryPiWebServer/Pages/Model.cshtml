@page
@using RaspberryPiWebServer.Models
@model RaspberryPiWebServer.Pages.ModelModel

@(Html.DevExtreme().DataGrid<Models.Model>()
    .ShowBorders(true)
    .DataSource(d => d.Mvc()
            .Controller("Model")
            .LoadAction("Get")
            .InsertAction("Post")
            .UpdateAction("Put")
            .DeleteAction("Delete")
            .Key("Id"))
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowUpdating(true)
        .AllowAdding(true)
        .AllowDeleting(true)
        .Popup(p => p
            .Title($"{nameof(Models.Model)} Info")
            .ShowTitle(true)
            .Width(500)
            .Height(525)
        )
        .Form(f => f.Items(items => {
            items.AddSimpleFor(m => m.Name).ColSpan(2);
        }))
        )
    .Columns(columns => {
        columns.AddFor(m => m.Name);
    })
    .Paging(p => p.PageSize(10))
    .SearchPanel(s=>s.HighlightSearchText(true))
    .FilterRow(f => f.Visible(false))
    .HeaderFilter(f => f.Visible(true))
    .GroupPanel(p => p.Visible(false))
    .Grouping(g => g.AutoExpandAll(false))
    .RemoteOperations(true)
)